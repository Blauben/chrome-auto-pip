{
  "name": "Automatic Picture-in-Picture (PiP)",
  "description": "Automatically enables Picture-in-Picture when switching tabs like Arc.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_title": "Activate Picture-in-Picture",
    "default_icon": "assets/icon.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "134",
  "author": "Alex Potenza",
  "homepage_url": "https://github.com/apotenza92/chrome-auto-pip"
}